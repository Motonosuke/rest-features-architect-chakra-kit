{
  "env": {
    "browser": true,
    "es2021": true,
    "commonjs": true
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "React": "writable"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "plugins": [
    "react",
    // "react-hooks",
    "@typescript-eslint",
    "jsx-a11y",
    "import",
    "typescript-custom-sort-keys",
    "sort-destructure-keys",
    "sort-keys-fix"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    // "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jsx-a11y/recommended",
    "next",
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "react/prop-types": "off", // for Next.js
    "react/react-in-jsx-scope": "off", // for TypeScript
    "@typescript-eslint/consistent-type-definitions": ["warn", "interface"],
    "react/jsx-sort-props": "error",
    "react-hooks/exhaustive-deps": "warn",
    "typescript-custom-sort-keys/interface": [
      "warn",
      "asc",
      {
        "caseSensitive": true,
        "displayFirst": ["id"],
        "showFunctionsAtEnd": true
      }
    ],
    "@typescript-eslint/no-unused-vars": ["error", { "varsIgnorePattern": "^_", "argsIgnorePattern": "^_" }],
    "no-console": ["error", { "allow": ["warn", "info", "error"] }],
    "react/destructuring-assignment": ["error", "always"],
    "sort-destructure-keys/sort-destructure-keys": 2,
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "variable",
        "types": ["boolean"],
        "format": ["PascalCase"],
        "prefix": ["is", "should", "has", "can", "did", "will", "no"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": "src/**/*",
      "excludedFiles": ["src/components/**/*"],
      "rules": {
        "no-restricted-imports": ["error", { "patterns": ["./", "../"] }]
      }
    },
    {
      "files": "src/**/*",
      "excludedFiles": ["src/pages/_app.tsx", "src/components/**/*"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": ["@chakra-ui/*"]
          }
        ]
      }
    },
    {
      "files": ["src/**/*.{js,jsx,ts,tsx}"],
      "rules": {
        "import/order": [
          "error",
          {
            "groups": ["builtin", "external", "parent", "sibling", "index", "object", "type"],
            "pathGroups": [
              {
                "pattern": "@alias/**",
                "group": "parent",
                "position": "before"
              }
            ],
            "alphabetize": {
              "order": "asc"
            },
            "newlines-between": "always"
          }
        ]
      }
    },
    {
      "files": "src/**/*",
      "excludedFiles": ["src/components/theme/Theme.ts"],
      "rules": {
        "sort-keys": ["error", "asc", { "caseSensitive": true, "natural": true, "minKeys": 2 }],
        "sort-keys-fix/sort-keys-fix": "warn"
      }
    }
  ]
}
